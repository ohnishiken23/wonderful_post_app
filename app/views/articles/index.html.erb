      <th scope="col">タイトル</th>
      <th scope="col">内容</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '詳細', article, class: "btn btn-success mr-1" %></td>
        <!--<td><%= link_to '編集', edit_article_path(article), class: "btn btn-warning" %></td>-->
        <!--<td><%= button_to "削除", article, class: "btn btn-danger", method: :delete %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

